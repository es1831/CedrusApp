extends layout

block content
  h1= title
  p Welcome to #{title}

  body
    div(ng-controller='MainCtrl' class='list-group')
      div(ng-repeat='post in posts')
          div(class='list-group-item') Title: {{post.title}}
            div Body: {{post.body}}
            button(ng-click='loadComments(post); showComments = !showComments' class='btn') Comments:
            div(ng-repeat='comment in post.comments' ng-show='showComments')
              div {{comment.name}}
