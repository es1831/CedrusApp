body
  div.container.sign-up(ng-controller = "SignUpCtrl")
    h3.header SIGN UP WITH US!
    div.row
      form.col.s12(name='formValidation')
        div.row
          div.input-field.col.s6
            input.validate(type="text", ng-model= 'newUser.first_name', required)
            label(for="icon_prefix") First name
        div.row
          div.input-field.col.s6
            input.validate(type="text", ng-model= 'newUser.last_name' required)
            label(for="icon_prefix") Last Name
        div.row
          button.btn.waves-effect.waves-light(type="submit",
                                              name="action",
                                              ng-click="verify()",
                                              ng-disabled="formValidation.$invalid") Next

