body
  div.list-group.container(ng-controller = "PostsCtrl")
    div(ng-repeat = "post in posts")
        div(class = "list-group-item")
          div
          h3 Title: {{post.title}}
          div
          h5 Post: {{post.body}}
          div.button
            button.btn.btn-success.comment(ng-click = "loadComments(post); showComments = !showComments") Show Comments
          div(ng-repeat = "comment in post.comments" ng-show = "showComments")
            div.comment E-mail:{{comment.email}}
            div.well.well-lg {{comment.name}}
